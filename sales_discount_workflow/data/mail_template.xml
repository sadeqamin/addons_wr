<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!--Email template -->
        <record id="email_template_sale_approval_mail" model="mail.template">
            <field name="name">Sale order Approval Notification</field>
            <field name="email_from">${object.user_id.email or ''}</field>
            <field name="subject">Sale Order Approval Request}</field>
            <field name="email_to">${object.can_approve_user_id.email}</field>
            <field name="model_id" ref="sale.order"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
                <p>Dear <t t-esc="object.can_approve_user_id.name"/>,</p>
                <p>You have been requested to approve the sales order <t t-esc="object._description.lower()"/> <t t-esc="object.name_get()[0][1]"/>.</p>
                <p>
                    <a t-att-href="'/mail/view?model=%s&amp;res_id=%s' % (object._name, object.id)" style="background-color: #9E588B; margin-top: 10px; padding: 10px; text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">
                        View <t t-esc="object._description.lower()"/>
                    </a>
                </p>
                <p style="color:#9E588B;">Powered by <a href="https://cloud.wrltd.ca">adhoc</a>.</p>
                ]]></field>
        </record>
    </data>
</odoo>