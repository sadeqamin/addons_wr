<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_extends" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="before">
                <field name="user_can_approve_so" invisible="1"/>
                <!--<field name="order_total_discount" invisible="1"/>-->
                <!--<field name="can_approve_user_id" string="Request Approval From" attrs="{'invisible': [('user_can_approve_so', '!=', True), ('state', '=', 'to_approve')]}"/>-->
            </field>
            <field name="payment_term_id" position="after">
                <field name="can_approve_user_id" string="Approval By"/>
            </field>
            <field name="state" position="replace">
                <field name="state" widget="statusbar" statusbar_visible="draft,sent,to_approve,sale"/>
            </field>
            <xpath expr="//button[@name='action_cancel']" position="replace">
                <button name="action_cancel" states="draft,sent,sale,to_approve" type="object" string="Cancel"/>
            </xpath>
            <xpath expr="//button[@name='action_confirm']" position="after">
                <button name="action_approve_so" type="object" string="Approve Order" class="btn-primary o_sale_confirm" attrs="{'invisible': ['|', ('user_can_approve_so', '!=', True), ('state' , 'in', ['sale', 'cancel', 'done', 'sent', 'draft'])]}"/>
            </xpath>

        </field>
    </record>
    <record id="view_order_form_inherit_sale_stock_discount_workflow" model="ir.ui.view">
        <field name="name">sale.order.form.sale.stock.discount.workflow</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_delivery']" position="replace">
                <button type="object"
                    name="action_view_delivery"
                    class="oe_stat_button"
                    icon="fa-truck"
                    attrs="{'invisible': ['|', ('delivery_count', '=', 0), ('state', 'in', ['sent', 'draft', 'to_approve'])]}" groups="base.group_user">
                    <field name="delivery_count" widget="statinfo" string="Delivery"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>

